{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": ["admin", "inspector"]
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        }
      },
      "required": ["email", "role", "displayName"]
    },
    "Client": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Client",
      "type": "object",
      "description": "Represents a client, typically a power plant or industrial facility.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the client."
        },
        "address": {
          "type": "string",
          "description": "Physical address of the client."
        }
      },
      "required": ["name", "address"]
    },
    "Equipment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Equipment",
      "type": "object",
      "description": "Represents a crane equipment to be inspected.",
      "properties": {
        "tag": {
          "type": "string",
          "description": "Tag or identifier for the equipment."
        },
        "name": {
          "type": "string",
          "description": "Name of the equipment."
        },
        "sector": {
          "type": "string",
          "description": "Sector where the equipment is located."
        },
        "lastInspection": {
          "type": "string",
          "description": "Date of the last inspection.",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": ["Operacional", "Requer Atenção", "Fora de Serviço"]
        },
        "clientId": {
          "type": "string",
          "description": "ID of the client this equipment belongs to."
        }
      },
      "required": ["tag", "name", "sector", "status", "clientId"]
    },
    "EquipmentComponent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "EquipmentComponent",
      "type": "object",
      "description": "Represents a component part of a larger piece of equipment.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the component."
        }
      },
      "required": ["name"]
    },
    "WorkOrder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WorkOrder",
      "type": "object",
      "description": "Represents a scheduled inspection task.",
      "properties": {
        "clientId": { "type": "string", "description": "ID of the client." },
        "equipmentId": { "type": "string", "description": "ID of the equipment to be inspected." },
        "inspectorId": { "type": "string", "description": "ID of the assigned inspector (user UID)." },
        "scheduledDate": { "type": "string", "format": "date", "description": "Date the inspection is scheduled for." },
        "status": { "type": "string", "enum": ["Pendente", "Em Andamento", "Concluída", "Cancelada"], "description": "Current status of the work order." },
        "notes": { "type": "string", "description": "Additional notes or instructions from the admin." }
      },
      "required": ["clientId", "equipmentId", "inspectorId", "scheduledDate", "status"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user profile information and role.",
          "params": [{ "name": "userId", "description": "Matches the Firebase Auth user UID." }]
        }
      },
      {
        "path": "/clients/{clientId}",
        "definition": {
          "entityName": "Client",
          "schema": { "$ref": "#/backend/entities/Client" },
          "description": "Stores client data.",
          "params": [{ "name": "clientId", "description": "Unique identifier for the client." }]
        }
      },
      {
        "path": "/equipment/{equipmentId}",
        "definition": {
          "entityName": "Equipment",
          "schema": { "$ref": "#/backend/entities/Equipment" },
          "description": "Stores equipment data.",
          "params": [{ "name": "equipmentId", "description": "Unique identifier for the equipment." }]
        }
      },
      {
        "path": "/equipment/{equipmentId}/components/{componentId}",
        "definition": {
          "entityName": "EquipmentComponent",
          "schema": { "$ref": "#/backend/entities/EquipmentComponent" },
          "description": "Stores components for a piece of equipment.",
          "params": [
            { "name": "equipmentId", "description": "ID of the parent equipment." },
            { "name": "componentId", "description": "Unique identifier for the component." }
          ]
        }
      },
      {
        "path": "/workOrders/{workOrderId}",
        "definition": {
          "entityName": "WorkOrder",
          "schema": { "$ref": "#/backend/entities/WorkOrder" },
          "description": "Stores scheduled inspection work orders.",
          "params": [{ "name": "workOrderId", "description": "Unique ID for the work order." }]
        }
      }
    ]
  }
}
